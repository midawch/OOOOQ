/**index.wxss**/
.userInfo{
  width: 690rpx;
  height: 540rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 30rpx auto 0;
  overflow: hidden;
  position: relative;
}
.userInfo .userAvatsr{
  display: block;
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  margin: 90rpx auto 0;
}
.userInfo .name{
  width: 100%;
  text-align: center;
  margin-top: 92rpx;
  color: #515854;
  font-size: 32rox;
}
.userInfo .schoolClass{
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  color: #7e8883;
  font-size: 24rpx;
}
.gameInfo{
  width: 690rpx;
  height: 330rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx auto 0;
  overflow: hidden;
}
.getUserInfoBtn{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 271rpx;
  height: 92rpx;
  transform: translate(-50%,-50%);
  background: #ccc;
}
.gameInfo .gameData{
  width: 100%;
  height: 120rpx;
  margin-top: 50rpx;
}
.gameNum, .winNum, .winProbablility{
  width: 33.3%;
  height: 100%;
}
.gameNum >view:nth-of-type(1), .winNum >view:nth-of-type(1), .winProbablility >view:nth-of-type(1){
   width: 100%;
   height: 70%;
   text-align: center;
   font: normal normal 72rpx 'DINCond-Medium';
   color: #52cc8f;
 }
.gameNum >view:nth-of-type(2), .winNum >view:nth-of-type(2), .winProbablility >view:nth-of-type(2){
  width: 100%;
  height: 30%;
  text-align: center;
  font-size: 28rpx;
  color: #7e8883;
}
.playGame{
  width: 653rpx;
  height: 114rpx;
  text-align: center;
  color: #fff;
  font: bold 32rpx/100rpx "PingFang-SC";
  margin: 40rpx auto 0;
  background: url("https://m.teacher.jiaofuyun.com/studentPK/images/weapp/btn.png") no-repeat center;
  background-size: 100%;
}
.playGame:after{
  border: none;
}