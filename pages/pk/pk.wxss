.canvasBox{
    width: 100%;
    height: 76rpx;
    position: relative;
    margin: 120rpx 0 60rpx;
}
.canvas{
    width: 76rpx;
    height: 76rpx;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
}
.result{

}
 .score{
    width: 200rpx;
    height: 100%;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    color: #fff;
    font: normal 88rpx "DINCond-Medium";
}
.score .doWorkTime{
    text-align: center;
    width: 100%;
    font-size: 24rpx;
    bottom: -10rpx;
    left: 50%;
    transform: translateX(-50%);
}
.doWorkTime .myTime{
    text-align: right;
    left: 0;
    bottom: 0;
    width: 42%;
}
.doWorkTime .hisTime{
    text-align: left;
    right: 0;
    bottom: 0;
    width: 42%;
}
.result .win ,.result .lose{
    display: block;
    width: 394rpx;
    height: 117rpx;
    margin: 20rpx auto 0;
}
.result .leftText, .result .rightText{
    bottom: -50rpx;
    width: 50%;
    color: #fff;
    font-size: 28rpx;
    box-sizing: border-box;
}
.leftText{
    text-align: left;
    padding-left: 50rpx;
}
.rightText{
    text-align: right;
    padding-right: 50rpx;
}
.result .gameTitle .leftPlayer{
    transform: translateX(-60rpx);
}
.result .gameTitle .rightPlayer{
    transform: translateX(60rpx);
}
.leftText{
    left: 0;
    transform: translateX(-60rpx);
    animation: left_to_right .5s ease-in-out;
    animation-fill-mode: forwards;
 }
.rightText{
    right: 0;
    transform: translateX(60rpx);
    animation: right_to_left .5s ease-in-out;
    animation-fill-mode: forwards;
}
.words{
    width: 690rpx;
    height: 604rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin: 100rpx auto 0;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.words .word{
    position: relative;
    width: 100%;
    height: 98rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #ccc;
