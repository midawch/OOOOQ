}
.words .word:nth-of-type(5){
    border: none;
}
.word .state{
    position: absolute;
    width: 16rpx;
    height: 0;
}
.playAgain{
    width: 630rpx;
    height: 98rpx;
    background-color: #52cc8f;
    text-align: center;
    line-height: 98rpx;
    color: #fff;
    font-size: 32rpx;
}
.word .state.right{
}
.word .oneWord, .word .Interpretation{
    height: 98rpx;
    font-size: 24rpx;
    color: #515854;
